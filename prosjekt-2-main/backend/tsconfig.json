{
    "compilerOptions": {
        "rootDirs": ["src"],
        "outDir": "lib",
        "lib": ["es2022"],
        "module": "esnext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "removeComments": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
